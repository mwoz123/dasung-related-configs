      "before": [
        "d"
      ],
      "after": [
        "\"",
        "_",
        "d"
      ]
    },
      // vim-cutless implementation?
      {
        "before": ["D"],
        "after": ["\"", "_", "D"]
      },
      {
        "before": ["d"],
        "after": ["\"", "_", "d"]
      },
      {
        "before": ["d", "d"],
        "after": ["\"", "_", "d", "d"]
